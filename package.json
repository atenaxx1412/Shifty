{
  "name": "shifty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:safe": "rm -rf .next && next dev",
    "dev:npx": "npx next@15.5.2 dev",
    "dev:turbo": "next dev --turbopack",
    "build": "next build",
    "build:safe": "rm -rf .next && next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next node_modules/.cache",
    "reset": "rm -rf node_modules package-lock.json .next && npm install",
    "health": "npm ls --depth=0 && node --version && npm --version",
    "create-indexes": "tsx scripts/create-firestore-indexes.ts",
    "cleanup-db": "tsx scripts/cleanup-firestore.ts",
    "init-db": "tsx scripts/init-firestore.ts",
    "reset-db": "npm run cleanup-db && npm run init-db",
    "init-firestore": "tsx scripts/init-firestore.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.6.0",
    "@next/swc-darwin-arm64": "^15.5.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.2",
    "firebase": "^11.0.0",
    "lucide-react": "^0.460.0",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.52.0",
    "tailwind-merge": "^2.3.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/xlsx": "^0.0.35",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}
