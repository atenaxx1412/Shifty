        totalAssignedStaff += slot.assignedStaff?.length || 0;
      });
    });

    // äººå“¡ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆã‹ã‚‰æ¨å¥¨äººæ•°ã‚’å–å¾—
    let templateRequiredStaff = 0;
    let templateShortageByTimeSlot: { [key: string]: number } = {};
    let hasTemplateData = false;

    if (staffingTemplate) {
      try {
        const templateRequirement = StaffingTemplateService.getRequiredStaffForDate(staffingTemplate, date);
        templateRequiredStaff = templateRequirement.morning + templateRequirement.afternoon + templateRequirement.evening;
        hasTemplateData = true;

        // æ™‚é–“å¸¯åˆ¥ã®ä¸è¶³åˆ†æ
        const actualStaffByTimeSlot = {
          morning: 0,
          afternoon: 0,
          evening: 0
        };

        // æ—¢å­˜ã‚·ãƒ•ãƒˆã‚’æ™‚é–“å¸¯åˆ¥ã«åˆ†é¡
        dayShifts.forEach(shift => {
          shift.slots.forEach(slot => {
            const startHour = parseInt(slot.startTime?.split(':')[0] || '9');
            let timeSlot: 'morning' | 'afternoon' | 'evening';

            if (startHour < 13) {
              timeSlot = 'morning';
            } else if (startHour < 17) {
              timeSlot = 'afternoon';
            } else {
              timeSlot = 'evening';
            }

            actualStaffByTimeSlot[timeSlot] += slot.assignedStaff?.length || 0;
          });
        });

        // æ™‚é–“å¸¯åˆ¥ä¸è¶³è¨ˆç®—
        templateShortageByTimeSlot = {
          morning: Math.max(0, templateRequirement.morning - actualStaffByTimeSlot.morning),
          afternoon: Math.max(0, templateRequirement.afternoon - actualStaffByTimeSlot.afternoon),
          evening: Math.max(0, templateRequirement.evening - actualStaffByTimeSlot.evening)
        };

      } catch (error) {
        console.warn('ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆåˆ†æã‚¨ãƒ©ãƒ¼:', error);
      }
    }

    const shortage = totalRequiredStaff - totalAssignedStaff;
    const templateShortage = Math.max(0, templateRequiredStaff - totalAssignedStaff);
    const fulfillmentRate = totalRequiredStaff > 0 ? (totalAssignedStaff / totalRequiredStaff) * 100 : 0;
    const templateFulfillmentRate = templateRequiredStaff > 0 ? (totalAssignedStaff / templateRequiredStaff) * 100 : 0;

    return {
      totalSlots,
      totalRequiredStaff,
      totalAssignedStaff,
      shortage: Math.max(0, shortage),
      fulfillmentRate,
      // ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆé–¢é€£ã®çµ±è¨ˆ
      templateRequiredStaff,
      templateShortage,
      templateFulfillmentRate,
      templateShortageByTimeSlot,
      hasTemplateData,
      // é‡è¦åº¦åˆ¤å®š
      isCriticalShortage: templateShortage >= 3 || Object.values(templateShortageByTimeSlot).some(s => s >= 2),
      isWarningShortage: templateShortage >= 1 || Object.values(templateShortageByTimeSlot).some(s => s >= 1)
    };
  };



