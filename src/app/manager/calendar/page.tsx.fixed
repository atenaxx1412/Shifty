  const getDayStats = (date: Date) => {
    const dayShifts = getShiftsForDate(date);

    let totalRequiredStaff = 0;
    let totalAssignedStaff = 0;
    let totalSlots = 0;

    // æ—¢å­˜ã®ã‚·ãƒ•ãƒˆã‚¹ãƒ­ãƒƒãƒˆã‹ã‚‰çµ±è¨ˆã‚’è¨ˆç®—
